@model MyMoney.Models.ViewModels.AccountingViewModel
@using MyMoney.Models.Enums
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AccountingLayout.cshtml";
}

<h2>Create</h2>


